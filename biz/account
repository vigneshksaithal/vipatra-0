    <br>
    <form class="container">
      <h5 class="text-center m-3">Update Email</h5>
      <div class="card">
        <div class="card-body">
          <div class="form-group">
            <label>Email</label>
            <input v-model="newEmail" type="email" class="form-control" placeholder="Enter new email">
            <div class="text-right mt-4">
              <button v-on:click="update_email" v-bind:disabled="emailBtn" class="btn btn-primary">Update Email</button>
            </div>
          </div>
        </div>
      </div>
    </form>
    <br>
    <form class="container">
      <h5 class="text-center m-3">Update Password</h5>
      <div class="card">
        <div class="card-body">
          <div class="form-group">
            <label>Password</label>
            <input v-model="newPassword" type="email" class="form-control" placeholder="Enter new email">
            <div class="text-right mt-4">
              <button v-on:click="update_password" v-bind:disabled="passwordBtn" class="btn btn-primary">Update Password</button>
            </div>
          </div>
        </div>
      </div>
    </form>
