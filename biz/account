    <script>
    
      var userId;     document.addEventListener("DOMContentLoaded", function() {
        get_user_id();
      });            
                                            
     var app = new Vue({
        el: '#body',
        data() {
          return {
            bizName: '',
            address: '',
            phone: '',
            currency: '',
            gstIN: '',
            newEmail: '',
            newPassword: '', 
            updateBtn: false,
            emailBtn: false,
            passwordBtn: false    
          }   
        },
        
        methods: {
          get_store_data() {
            db.collection('biz')
            .doc(userId)
            .get()
            .then((doc) => {
              var data = doc.data().bizInfo;
              this.bizName = data.name;
              this.address = data.address;
              this.phone = data.phone;
              this.gstIN = data.gstIN;
              this.currency = data.currency;
            })
          },
          
          update_biz_data() {          
            db.collection('biz')
            .doc(userId)
            .set({
              bizInfo: {
                name: this.bizName,
                address: this.address,
                phone: Number(this.phoneNo),
                gstIN: this.gstIN,
                currency: this.currency
              }
            }, {merge: true}).then(() => {
              this.btnText = 'Saved';   
            });                        
          },
          
          update_email() {
            this.updateBtn = true;
            var user = auth.currentUser;
      
            user.updateEmail(this.newEmail).then(() => {
              
            }).catch((error) => {
          // An error happened.
            });
          },
          
          update_password() {
            this.passwordBtn = true;
            var user = auth.currentUser;      
          user.updatePassword(this.newPassword)
           .then(() => {
             this.passwordBtn = false;
           }).catch((error) => {
             // An error happened.
           });
         }
                      
        }
      });
      
      function get_user_id() {
        auth.onAuthStateChanged((user) => {
          if (user) {
            userId = user.uid;
            app.get_store_data();
          }
          else{
            document.write('Please Login');
            setTimeout(() => {
              window.location.href = '/store/login'; 
            }, 1000)
          }
        });
      }
      
      
    </script>
    
